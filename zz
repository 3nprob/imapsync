
my $f_sep="/";
my $t_sep=".";

foreach my $f_fold ("testsub/testsub3", "testsub.testsub3" ) {
	my $t_fold;
	print "From Folder [$f_fold]\n";
	$t_fold = $f_fold;
	my $t_fold2 = $f_fold;
	$t_fold  =~ s@\Q$f_sep@$t_sep@g;
	$t_fold2 =~ s@\Q$t_sep@$f_sep@g;
	#$t_fold =~ s@/@.@g;
	print "To /.  Folder [$t_fold]\n";
	print "To ./  Folder2[$t_fold2]\n\n";
	
}
